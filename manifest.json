{
  "manifest_version": 3,
  "name": "GitHub Repo Explorer",
  "version": "1.0",
  "description": "Explora y busca en repositorios de GitHub",
  "permissions": ["identity", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/explore-icon.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Abrir GitHub Repo Explorer"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["config.js", "popup.js", "background.js"],
      "matches": ["<all_urls>"]
    }
  ]
}